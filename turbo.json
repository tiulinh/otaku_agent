{
  "$schema": "https://turborepo.org/schema.json",
  "// Force cache invalidation": "2025-11-08",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "build:backend": {
      "outputs": ["dist/**"]
    },
    "build:frontend": {
      "outputs": ["dist/frontend/**"]
    }
  }
}

